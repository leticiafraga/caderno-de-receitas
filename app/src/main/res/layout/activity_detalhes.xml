<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetalhesActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomeDetalhe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="16.0dip"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="25.0sp" />

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textIngredientes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8.0dip"
                android:text="Ingredientes:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/textIngrDetalhe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8.0dip"
                android:textSize="18.0sp" />

            <TextView
                android:id="@+id/textPreparo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8.0dip"
                android:text="Preparo:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/textDescDetalhe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8.0dip"
                android:textSize="18.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textFonte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8.0dip"
                    android:text="Fonte:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20.0sp" />

                <TextView
                    android:id="@+id/textFonteDetalhe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18.0sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageDetalhes"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="16dp"
                android:layout_weight="0"
                android:contentDescription="Imagem da receita"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_add_white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>