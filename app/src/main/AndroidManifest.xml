<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leticiafraga.receitas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_lapis"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_lapis_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.CadastrarReceitaActivity"
            android:label="@string/title_nova_receita">
        </activity>
        <activity
            android:name=".activity.DetalhesActivity"
            android:label="@string/title_detalhes_activity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.PerfilActivity"
            android:label="@string/title_perfil_activity"
            android:parentActivityName=".activity.MainActivity"/>
        <activity
            android:name=".activity.CadastroActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>